
<%# provide(:title, 'Draft Candidates') %>
<h1>Add Draft Candidate</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@draftee) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control'%>

      <%= f.label :twitter %>
      <%= f.text_field :twitter, class: 'form-control' %>

      <%= f.label :instagram %>
      <%= f.text_field :instagram, class: 'form-control' %>

      <%= f.submit "Add candidate", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>